<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_7"
    android:paddingVertical="@dimen/dp_9">
    <ImageView
        android:id="@+id/img_actor_vertical"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_120"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15">
        <TextView
            android:id="@+id/txt_actor_name_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_17"
            android:textColor="#777777"
            android:layout_gravity="left"
            />
        <TextView
            android:id="@+id/txt_actor_jname_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_17"
            android:textColor="#777777"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_gravity="left"
            />
        <TextView
            android:id="@+id/txt_actor_role_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:textColor="#777777"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dp_16"/>
    </LinearLayout>
</LinearLayout>