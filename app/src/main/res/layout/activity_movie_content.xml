<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_movie_cotent"
                android:layout_width="@dimen/dp_500"
                android:layout_height="@dimen/dp_400"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/movie_poster"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_7"
                android:background="@color/movie_content_bg">
                <TextView
                    android:id="@+id/txt_show_detail"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/movie_detail"

                    android:textColor="@drawable/click_color"
                    android:clickable="true"
                    android:textSize="@dimen/dp_20"/>
                <TextView
                    android:id="@+id/txt_more_stills"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/movie_stills"
                    android:textColor="@drawable/click_color"
                    android:clickable="true"
                    android:textSize="@dimen/dp_20"/>
            </LinearLayout>

            <ListView
                android:id="@+id/actors_utils_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/actors_horizon_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_10"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>