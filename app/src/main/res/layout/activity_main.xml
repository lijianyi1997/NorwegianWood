<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_0">

    <ImageView
        android:id="@+id/img_main"
        android:src="@drawable/wood_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="《挪威的森林》是日本著名作家村上春树的一部长篇爱情小说，让我们一起走进书中世界，感受主人公的多难青春。"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:textSize="@dimen/dp_20"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_author_main"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_80"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_author_img"/>

                <TextView
                    android:id="@+id/txt_author_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者简介"
                    android:textSize="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:textColor="@drawable/click_color"

                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_intro_main"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_80"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_intro_img"/>

                <TextView
                    android:id="@+id/txt_intro_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故事梗概"
                    android:textSize="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:textColor="@drawable/click_color"

                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_comment_main"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_80"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_comment_img"/>

                <TextView
                    android:id="@+id/txt_comment_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精彩书评"
                    android:textSize="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:textColor="@drawable/click_color"

                    android:layout_gravity="center"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_movie_main"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_80"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_movies_img"/>

                <TextView
                    android:id="@+id/txt_movie_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同名电影"
                    android:textSize="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:textColor="@drawable/click_color"

                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>